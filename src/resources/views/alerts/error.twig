<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    {% if Lang.has('cornerstone::alerts.error') %}
        <h4><i class="fa fa-exclamation-circle"></i> {{ trans('cornerstone::alerts.error') }}</h4>
    {% endif %}
    {{ message | raw }}
</div>
